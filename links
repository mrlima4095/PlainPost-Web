    <style>
        input[type="url"] { margin-bottom: 10px; }
    
        .linkItem { background: #f2f2f2; border-radius: 5px; padding: 10px; margin-bottom: 5px; display: flex; justify-content: space-between; align-items: center; font-family: monospace; }
        .linkItem a { color: #007bff; text-decoration: none; }
        .linkItem a:hover { text-decoration: underline; } 
        .linkInfo { flex-grow: 1; }
        .linkActions button { background-color: crimson; color: white; border: none; padding: 5px 8px; cursor: pointer; border-radius: 4px; }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        async function listar() {
            const res = await fetch("/api/short", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ action: "list" }),
                credentials: "include"
            });

            const data = await res.json();
            const container = document.getElementById("meusLinks");
            container.innerHTML = "";

            if (Array.isArray(data.response)) {
                data.response.forEach(item => {
                    const div = document.createElement("div");
                    div.className = "linkItem";

                    div.innerHTML = `
                        <div class="linkInfo">
                            <a href="/s/${item.id}" target="_blank">/s/${item.id}</a> - ${item.url}
                        </div>
                        <div class="linkActions">
                            <button onclick="apagar('${item.id}')">Excluir</button>
                        </div>
                    `;
                    container.appendChild(div);
                });
            }
        }

        async function apagar(id) {
            const confirm = await Swal.fire({
                title: 'Tem certeza?',
                text: 'Voc√™ deseja excluir este link encurtado?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Sim, excluir!',
                cancelButtonText: 'Cancelar'
            });
        
            if (confirm.isConfirmed) {
                const res = await fetch("/api/short", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    credentials: "include",
                    body: JSON.stringify({ action: "delete", id: id })
                });
        
                const data = await res.json();
                if (res.status === 200) {
                    Swal.fire("Pronto!", data.response, "success");
                    listar();
                } else {
                    Swal.fire("Erro", data.response || "Erro desconhecido.", "error");
                }
            }
        }
        
        async function encurtar() {
            const url = document.getElementById("url").value.trim();
            if (!url) return Swal.fire("Erro", "Informe uma URL!", "error");
        
            const res = await fetch("/api/short", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                credentials: "include",
                body: JSON.stringify({ action: "create", url: url })
            });
        
            const data = await res.json();
            if (res.status === 200) {
                Swal.fire("Link criado!", "Novo link: /s/" + data.response, "success");
                listar();
            } 
            else if (res.status === 401) window.location.href = "/login";
            else if (res.status === 402) Swal.fire("Erro", "Saldo insuficiente!", "error");
            else if (res.status === 429) Swal.fire("Erro", "Voc√™ atingiu o limite de 5 links curtos!", "error");
            else Swal.fire("Erro", data.response || "Erro desconhecido.", "error");
        }


        function plainpost() { window.location.href = "/"; }

        listar();
    </script>
</head>
<body>
    <div id="container">
        <h2>Encurtador</h2>
        <input type="url" id="url" placeholder="Cole sua URL aqui...">
        <br>
        
        <div id="acoes">
            <button onclick="encurtar()" type="submit">üîó Encurtar</button>
            <button onclick="listar()">üîÑ Atualizar</button>
        </div>
        <button onclick="plainpost()">‚¨ÖÔ∏è Retornar</button><br><br>

