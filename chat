<body>
  <div id="conteiner">
    <div id="chat"></div>

    <textarea id="prompt" placeholder="Digite sua pergunta..."></textarea>
    <button id="enviar">Enviar</button>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const promptInput = document.getElementById("prompt");
      const chat = document.getElementById("chat");
      const sendButton = document.getElementById("enviar");

      function addMessage(content, sender) {
        const msg = document.createElement("div");
        msg.classList.add("msg", sender);

        // Se for IA, renderiza Markdown
        msg.innerHTML = sender === "ia" ? marked.parse(content) : content;

        chat.appendChild(msg);
        chat.scrollTop = chat.scrollHeight;
      }

      sendButton.addEventListener("click", async () => {
        const token = localStorage.getItem("Mail-Token");
        const promptValue = promptInput.value.trim();

        if (!token) {
          window.location = "/login";
          return;
        }

        if (!promptValue) {
          Swal.fire("Aviso", "Digite um prompt.", "warning");
          return;
        }

        addMessage(promptValue, "user");
        promptInput.value = "";
        addMessage("⌛ Aguardando resposta...", "ia");

        try {
          const response = await fetch("https://archsource.xyz/api/agent", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
              "Authorization": token
            },
            body: JSON.stringify({ prompt: promptValue })
          });

          const data = await response.json();

          // Remove o "⌛" anterior
          const last = chat.querySelector(".ia:last-child");
          if (last) last.remove();

          addMessage(data.response || "❌ Erro na resposta", "ia");
        } catch (err) {
          const last = chat.querySelector(".ia:last-child");
          if (last) last.remove();

          Swal.fire("Erro", "Erro ao enviar mensagem.", "error");
          addMessage("❌ Erro na resposta", "ia");
        }
      });
    });
  </script>
</body>
</html>
